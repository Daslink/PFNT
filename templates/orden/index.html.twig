{% extends 'base.html.twig' %}

{% block title %}Orden index{% endblock %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('style.css') }}" />
{% endblock %}

{% block body %}
    <br><center><h1>Orden</h1></center>

    <style> 
        .contenedor{
            margin: 75px;
        }

        .crear{
            background-color: #343a40;
            color: rgba(255,255,255,.5);
            height: 50px;
            width: 200px;
        }
    </style>

    <div class="contenedor">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>IdEmpleado</th>
                    <th>IdProducto</th>
                    <th>Puntos</th>
                    <th>Cantidad</th>
                    <th>Estado</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </tr>
            </thead>
            <tbody>
            {% for orden in ordens %}
                <tr>
                    <td>{{ orden.id }}</td>
                    <td>{{ orden.idEmpleado }}</td>
                    <td>{{ orden.idProducto }}</td>
                    <td>{{ orden.puntos }}</td>
                    <td>{{ orden.cantidad }}</td>
                    <td>{{ orden.estado }}</td>
                    <td>
                        <a href="{{ path('orden_edit', {'id': orden.id}) }}">Editar</a>
                    </td>
                    <td>
                        <a href="{{ path('orden_show', {'id': orden.id}) }}">Borrar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

 {% endblock %}
