{% extends 'base.html.twig' %}

{% block title %}Periodo index{% endblock %}

{% block body %}
    <br><center><h1>Periodo</h1></center>

    <style> 
        .contenedor{
            margin: 75px;
        }

        .crear{
            background-color: #343a40;
            color: rgba(255,255,255,.5);
            height: 50px;
            width: 200px;
        }
    </style>

    <div class="contenedor">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>MontoBase</th>
                    <th>Editar</th>
                    <th>Borrar</th>
                </tr>
            </thead>
            <tbody>
            {% for periodo in periodos %}
                <tr>
                    <td>{{ periodo.id }}</td>
                    <td>{{ periodo.descripcion }}</td>
                    <td>{{ periodo.montoBase }}</td>
                    <td>
                        <a href="{{ path('periodo_edit', {'id': periodo.id}) }}">Editar</a>
                    </td>
                    <td>
                        <a href="{{ path('periodo_show', {'id': periodo.id}) }}">Borrar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <center><a href="{{ path('periodo_new') }}"><button class="crear">Crear un periodo</button></a></center>
{% endblock %}
